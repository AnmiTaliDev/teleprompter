<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="TeleprompterWindow" parent="AdwApplicationWindow">
    <property name="default-width">900</property>
    <property name="default-height">800</property>
    <property name="title">Teleprompter</property>
    <child>
      <object class="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkHeaderBar">
        <property name="css-classes">flat</property>
        <child type="end">
          <object class="GtkMenuButton">
            <property name="icon-name">open-menu-symbolic</property>
            <property name="menu-model">primary_menu</property>
          </object>
        </child>
        <child type="start">
          <object class="GtkButton" id="open_button">
            <property name="label">Open</property>
            <signal name="clicked" handler="open_button_clicked" swapped="no" />
          </object>
        </child>

      </object>
    </child>
    <child>
      <object class="AdwClamp">
        <property name="maximum-size">2000</property>
        <property name="tightening-threshold">1600</property>
        <child>
          <object class="GtkOverlay">
          <child>
          <object class="GtkScrolledWindow" id="scrolled_window">
            <property name="hscrollbar-policy">never</property>
            <property name="vexpand">True</property>
            <child>
              <object class="GtkTextView" id="text_view">
                <property name="buffer">text_buffer</property>
                <property name="cursor-visible">False</property>
                <property name="editable">1</property>
                <property name="indent">0</property>
                <property name="justification">left</property>
                <property name="pixels-above-lines">6</property>
                <property name="pixels-below-lines">6</property>
                <property name="right-margin">10</property>
                <property name="left-margin">100</property>
                <property name="wrap-mode">word</property>
                <property name="can-focus">1</property>
                <property name="can-target">1</property>
              </object>
            </child>
          </object>
        </child>
            <child type="overlay">
              <object class="GtkImage">
                <property name="icon-name">media-playback-start-symbolic</property>
                <property name="icon-size">large</property>
                <property name="margin-start">30</property>
                <property name="margin-top">200</property>
                <property name="margin-end">30</property>
                <property name="margin-bottom">18</property>
                <property name="valign">start</property>
                <property name="halign">start</property>
            </object>
            </child>
            <!-- <child type="overlay"> -->
            <!--   <object class="GtkImage"> -->
            <!--     <property name="file">/home/lorenzo/Projects/Teleprompter/data/resources/gradient.svg</property> -->
            <!--     <property name="can-focus">0</property> -->
            <!--     <property name="can-target">0</property> -->
            <!--     <property name="valign">1</property> -->
            <!--     <property name="pixel-size">1000</property> -->
            <!--     <property name="height-request">1</property> -->
            <!-- </object> -->
            <!-- </child> -->
            <child type="overlay">
              <object class="GtkBox" id="toolbar">
                <property name="margin-start">30</property>
                <property name="margin-end">30</property>
                <property name="margin-bottom">18</property>
                <property name="valign">2</property>
                <property name="halign">center</property>
                <child>
                  <object class="GtkButton">
                    <property name="icon-name">list-remove-symbolic</property>
                    <signal name="clicked" handler="decrease_speed_button_clicked" swapped="no" />
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="start_button">
                    <property name="icon-name">media-playback-start-symbolic</property>
                    <property name="css-classes">pill
suggested-action</property>
                    <signal name="clicked" handler="play_button_clicked" swapped="no" />
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="icon-name">list-add-symbolic</property>
                    <signal name="clicked" handler="increase_speed_button_clicked" swapped="no" />
                  </object>
                </child>
                <child>
                  <object class="GtkScale" id="progress_bar">
                    <property name="visible">0</property>
                    <property name="hexpand">true</property>
                    <property name="orientation">0</property>
                    <property name="show-fill-level">true</property>
                    <property name="sensitive">false</property>
                    <property name="adjustment">
                      <object class="GtkAdjustment" id="progress_bar_adj">
                        <property name="lower">0</property>
                        <property name="upper">100</property>
                        <property name="value">0</property>
                      </object>
                    </property>
                  </object>
                </child>
                <style>
                  <class name="toolbar"/>
                  <class name="osd"/>
                  <class name="darken"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
  </child>
  </template>
